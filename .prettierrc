{
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "options.editorconfig": true,
    "vueIndentScriptAndStyle": true,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 80,
    "bracketSameLine": true,
    "importOrder": [
        "^vue(.*)$",
        "^bootstrap(.*)%",
        "^@custom-components(.*)$",
        "$@(.*)types(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
