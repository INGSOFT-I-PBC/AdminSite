{
    "[python]": {
        "editor.autoIndent": "full",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true
        },
        "editor.defaultFormatter": "ms-python.python"
    },
    "[vue]": {
        "outline.showFunctions": true,
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.fixAll.eslint": true,
            "source.organizeImports": false,
            "source.sortMembers": true
        }
    },
    "prettier.enable": true,
    "prettier.vueIndentScriptAndStyle": true,

    "editor.codeActionsOnSave": {
        "source.fixAll": false,
        "source.organizeImports": false,
        "source.sortMembers": true
    },
    "python.formatting.provider": "autopep8",
    "python.formatting.blackPath": "black",
    "python.linting.enabled": true,
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.autoImportCompletions": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
      "--load-plugin=pylint_django",
      "--django-settings-module=backend.settings"
    ],
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "volar.completion.preferredAttrNameCase": "auto-kebab",
    "volar.completion.normalizeComponentAutoImportName": true,
    "volar.completion.preferredTagNameCase": "auto-pascal",
    "volar.doctor.statusBarItem": true,
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact"
    ],
    "eslint.codeActionsOnSave.mode": "all",
    "eslint.format.enable": true,
    "prettier.endOfLine": "lf",
    "eslint.packageManager": "pnpm",
    "eslint.workingDirectories": ["./frontend", "./frontend/src"],
    "typescript.inlayHints.enumMemberValues.enabled": true,
    "typescript.inlayHints.parameterNames.enabled": "literals",
    "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,
    "typescript.inlayHints.variableTypes.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    "typescript.inlayHints.parameterTypes.enabled": true,
    "cSpell.words": ["endregion", "viewsets"],
    "spellright.language": [],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "conventionalCommits.scopes": [
        "api_models",
        "api_views",
        "api_urls",
        "api",
        "ui",
        "frontend"
    ],
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": "file:///home/neoterux/Documents/ERPt/.github/workflows/deploy.yml"
    },
}
