# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py,java,r,R,js,ts}]
indent_style = space
indent_size = 4

[*.{json,y{a,}ml,html,cwi}]
indent_style = space
indent_size = 2

[.github/**/*.y{,a}ml]
indent_size = 4
indent_style = space

